<% if comment.id  %>
  <tr>
    <td><%= comment.name  %></td>
    <td><%= comment.email  %></td>
    <td><%= comment.body %></td>
    <td>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
        edit_post_comment_path(:post_id => @post.id, :id => comment) , :class => 'btn btn-mini' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
        post_comment_path(:post_id => @post.id, :id => comment),
        :method => :delete,
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-mini btn-danger' %>
    </td>
  </tr>
<% end %>